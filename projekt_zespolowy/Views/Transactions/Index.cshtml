@model IEnumerable<projekt_zespolowy.Models.Transaction>

@{
    ViewData["Title"] = "Transakcje";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>Historia Transakcji</h1>
        <a asp-action="Create" class="btn btn-success">+ Dodaj Nową</a>
    </div>

    <div class="card shadow-sm">
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>Data</th>
                        <th>Opis</th>
                        <th>Kategoria</th>
                        <th class="text-end">Kwota</th>
                        <th class="text-center">Akcje</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.Date.ToShortDateString()
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                @if (item.Category != null)
                                {
                                    <span class="badge bg-secondary">@item.Category.Name</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">Przychód</span>
                                }
                            </td>
                            <td class="text-end fw-bold @(item.Type == projekt_zespolowy.Models.TransactionType.Income ? "text-success" : "text-danger")">
                                @(item.Type == projekt_zespolowy.Models.TransactionType.Income ? "+" : "-")@item.Amount
                            </td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Edytuj</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Usuń</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>