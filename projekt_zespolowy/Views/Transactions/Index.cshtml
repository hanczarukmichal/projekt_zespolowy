@model IEnumerable<projekt_zespolowy.Models.Transaction>

@{
    ViewData["Title"] = "Historia Transakcji";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Historia Transakcji</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> + Nowa Transakcja
        </a>
    </div>

    <div class="card mb-4 bg-light">
        <div class="card-body">
            <form asp-action="Index" method="get">
                <div class="row g-3">

                    <div class="col-md-4">
                        <label class="form-label fw-bold">Szukaj (Opis / Kwota)</label>
                        <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control" placeholder="np. Zakupy lub 50.00" />
                    </div>

                    <div class="col-md-3">
                        <label class="form-label fw-bold">Kategoria</label>
                        <select name="categoryId" class="form-select" asp-items="ViewBag.Categories">
                            <option value="">-- Wszystkie --</option>
                        </select>
                    </div>

                    <div class="col-md-2">
                        <label class="form-label fw-bold">Data Od</label>
                        <input type="date" name="dateFrom" value="@ViewData["DateFrom"]" class="form-control" />
                    </div>

                    <div class="col-md-2">
                        <label class="form-label fw-bold">Data Do</label>
                        <input type="date" name="dateTo" value="@ViewData["DateTo"]" class="form-control" />
                    </div>

                    <div class="col-md-1 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary w-100" title="Filtruj">Szukaj</button>
                    </div>
                </div>

                <div class="row mt-2">
                    <div class="col-12 text-end">
                        <a asp-action="Index" class="text-decoration-none small text-muted">Wyczyść filtry ✕</a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Data</th>
                        <th>Kategoria</th>
                        <th>Opis</th>
                        <th class="text-end">Kwota</th>
                        <th class="text-center">Akcje</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            bool isIncome = item.Type == projekt_zespolowy.Models.TransactionType.Income;

                            <tr>
                                <td>@item.Date.ToString("yyyy-MM-dd")</td>
                                <td>
                                    @if (item.Category != null)
                                    {
                                        <span class="badge bg-secondary">@item.Category.Name</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted fst-italic">-</span>
                                    }
                                </td>
                                <td>@item.Description</td>
                                <td class="text-end fw-bold @(isIncome ? "text-success" : "text-danger")">
                                    @(isIncome ? "+" : "-") @item.Amount.ToString("N2") zł
                                </td>
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary">Edytuj</a>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info">Szczegóły</a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Usuń</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center py-4 text-muted">
                                <em>Nie znaleziono transakcji spełniających kryteria.</em>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>