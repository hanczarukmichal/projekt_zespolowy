@model projekt_zespolowy.Models.Transaction

@{
    ViewData["Title"] = "Nowa Transakcja";
}

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
        <h4 class="mb-0">Dodaj nową transakcję</h4>
    </div>
    <div class="card-body">

        @* BLOK OSTRZEŻENIA O PRZEKROCZENIU BUDŻETU *@
        @if (ViewBag.BudgetExceeded == true)
        {
            <div class="alert alert-warning border-warning shadow-sm" role="alert">
                <h4 class="alert-heading"><i class="bi bi-exclamation-triangle-fill"></i> Przekroczenie budżetu!</h4>
                <p>@ViewBag.ExceededMessage</p>
                <hr>
                <p class="mb-0">Kliknij przycisk <strong>Zapisz mimo to</strong> poniżej, aby zatwierdzić to przekroczenie.</p>
            </div>
        }

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @* UKRYTE POLE - przechowuje informację, czy użytkownik widzi już ostrzeżenie *@
            <input type="hidden" name="confirmExceeded" value="@(ViewBag.BudgetExceeded == true ? "true" : "false")" />

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Description" class="form-label fw-bold">Opis</label>
                    <input asp-for="Description" class="form-control" placeholder="Np. Zakupy spożywcze" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="Amount" class="form-label fw-bold">Kwota (PLN)</label>
                    <input asp-for="Amount" class="form-control" type="number" step="0.01" placeholder="0.00" />
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Date" class="form-label fw-bold">Data</label>
                    <input asp-for="Date" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="Type" class="form-label fw-bold">Typ transakcji</label>
                    <select asp-for="Type" class="form-select" asp-items="Html.GetEnumSelectList<projekt_zespolowy.Models.TransactionType>()"></select>
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="CategoryId" class="form-label fw-bold">Kategoria</label>
                <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.CategoryId">
                    <option value="">-- Wybierz kategorię --</option>
                </select>
                <div class="form-text">Wybierz kategorię zarówno dla wydatków, jak i przychodów (np. Wypłata, Premia).</div>
            </div>

            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <a asp-action="Index" class="btn btn-secondary me-md-2">Anuluj</a>

                @if (ViewBag.BudgetExceeded == true)
                {
                    <input type="submit" value="Zapisz mimo to" class="btn btn-warning px-4" />
                }
                else
                {
                    <input type="submit" value="Zapisz transakcję" class="btn btn-success px-4" />
                }
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}