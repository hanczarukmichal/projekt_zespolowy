@model IEnumerable<projekt_zespolowy.Models.Budget>
@{
    var balance = (decimal)ViewData["MainBalance"];
    var transactions = ViewData["RecentTransactions"] as List<projekt_zespolowy.Models.Transaction>;
    var budgets = ViewData["Budgets"] as List<projekt_zespolowy.Models.Budget>;
}

<button class="btn btn-primary mb-3" type="button" data-bs-toggle="offcanvas" data-bs-target="#sidebarMenu">
    ☰ Menu
</button>

<div class="offcanvas offcanvas-start" tabindex="-1" id="sidebarMenu">
    <div class="offcanvas-header">
        <h5 class="offcanvas-title">Nawigacja</h5>
        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas"></button>
    </div>
    <div class="offcanvas-body">
        <div class="list-group list-group-flush">
            <a asp-controller="Home" asp-action="Index" class="list-group-item list-group-item-action active">Pulpit</a>
            <a asp-controller="Budgets" asp-action="Index" class="list-group-item list-group-item-action">Budżety</a>
            <a asp-controller="Transactions" asp-action="Index" class="list-group-item list-group-item-action">Transakcje</a>
            <form asp-area="Identity" asp-page="/Account/Logout" method="post" class="mt-3">
                <button type="submit" class="btn btn-danger w-100">Wyloguj</button>
            </form>
        </div>
    </div>
</div>

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Witaj, <span class="text-primary">@User.Identity.Name</span>!</h2>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-white fw-bold">
            Przepływ Gotówki (Ostatnie 30 dni)
        </div>
        <div class="card-body">
            <div style="height: 300px; width: 100%;">
                <canvas id="dashboardChart"></canvas>
            </div>
        </div>
    </div>

    <div class="card text-center bg-light shadow mb-4 border-primary">
        <div class="card-body py-5">
            <h5 class="card-title text-muted text-uppercase">Dostępne Środki</h5>
            <h1 class="display-3 fw-bold @(balance >= 0 ? "text-success" : "text-danger")">
                @balance.ToString("N2") PLN
            </h1>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white fw-bold">
                    Twoje Budżety (Wg Priorytetu)
                </div>
                <div class="list-group list-group-flush">
                    @if (budgets != null && budgets.Any())
                    {
                        foreach (var b in budgets)
                        {
                            <div class="list-group-item">
                                <div class="d-flex w-100 justify-content-between">
                                    <h5 class="mb-1">@b.Category.Name</h5>
                                    <small class="badge bg-secondary">@b.Priority</small>
                                </div>
                                <p class="mb-1">Limit: <strong>@b.Amount PLN</strong></p>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="p-3 text-muted">Brak budżetów na ten miesiąc.</div>
                    }
                </div>
                <div class="card-footer bg-white text-center">
                    <a asp-controller="Budgets" asp-action="Create" class="btn btn-sm btn-outline-primary">+ Dodaj Budżet</a>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white fw-bold">
                    Ostatnie Operacje
                </div>
                <table class="table table-hover mb-0">
                    <tbody>
                        @if (transactions != null && transactions.Any())
                        {
                            foreach (var t in transactions)
                            {
                                bool isFuture = t.Date > DateTime.Now;
                                <tr class="@(isFuture ? "table-warning" : "")">
                                    <td>
                                        <div class="fw-bold">
                                            @if (t.Type == projekt_zespolowy.Models.TransactionType.Income)
                                            {
                                                <span>📈 Przychód</span>
                                            }
                                            else
                                            {

                                                <span>📉 Wydatek</span>
                                            }
                                        </div>
                                        <small class="text-muted">@t.Date.ToString("yyyy-MM-dd")</small>
                                        @if (isFuture)
                                        {
                                            <span class="badge bg-warning text-dark">Zaplanowane</span>
                                        }
                                    </td>
                                    <td class="text-end">
                                        <span class="@(t.Type == projekt_zespolowy.Models.TransactionType.Income ? "text-success" : "text-danger") fw-bold">
                                            @(t.Type == projekt_zespolowy.Models.TransactionType.Income ? "+" : "-")@t.Amount
                                        </span>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr><td class="p-3 text-muted">Brak transakcji.</td></tr>
                        }
                    </tbody>
                </table>
                <div class="card-footer bg-white text-center">
                    <a asp-controller="Transactions" asp-action="Create" class="btn btn-sm btn-outline-success">+ Nowa Transakcja</a>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const rawData = @Html.Raw(ViewData["ChartData"] ?? "[]");

        if (rawData.length > 0) {
            const ctx = document.getElementById('dashboardChart').getContext('2d');

            new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: rawData.map(x => x.Date),
                    datasets: [
                        {
                            label: 'Przychody',
                            data: rawData.map(x => x.Income),
                            backgroundColor: 'rgba(40, 167, 69, 0.7)',
                            borderColor: '#28a745',
                            borderWidth: 1,
                            borderRadius: 4
                        },
                        {
                            label: 'Wydatki',
                            data: rawData.map(x => x.Expense),
                            backgroundColor: 'rgba(220, 53, 69, 0.7)',
                            borderColor: '#dc3545',
                            borderWidth: 1,
                            borderRadius: 4
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                callback: function (value) { return value + ' zł'; }
                            }
                        },
                        x: {
                            grid: { display: false }
                        }
                    },
                    interaction: {
                        mode: 'index',
                        intersect: false,
                    },
                    plugins: {
                        tooltip: {
                            callbacks: {
                                label: function (context) {
                                    let label = context.dataset.label || '';
                                    if (label) { label += ': '; }
                                    if (context.parsed.y !== null) {
                                        label += new Intl.NumberFormat('pl-PL', { style: 'currency', currency: 'PLN' }).format(context.parsed.y);
                                    }
                                    return label;
                                }
                            }
                        }
                    }
                }
            });
        }
    });
</script>