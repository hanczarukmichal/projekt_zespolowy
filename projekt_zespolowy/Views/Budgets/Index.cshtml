@model IEnumerable<projekt_zespolowy.Models.Budget>

@{
    ViewData["Title"] = "Budżety";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>Twoje Budżety</h1>
        <a asp-action="Create" class="btn btn-primary">+ Nowy Budżet</a>
    </div>

    <div class="card shadow-sm">
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Kategoria</th>
                        <th>Limit</th>
                        <th>Miesiąc</th>
                        <th>Priorytet</th>
                        <th class="text-center">Akcje</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="fw-bold">
                                @Html.DisplayFor(modelItem => item.Category.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Amount) PLN
                            </td>
                            <td>
                                @item.Month.ToString("MM.yyyy")
                            </td>
                            <td>
                                <span class="badge bg-secondary">@item.Priority</span>
                            </td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Edytuj</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Usuń</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>