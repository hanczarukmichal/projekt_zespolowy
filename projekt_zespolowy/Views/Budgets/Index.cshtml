@model IEnumerable<projekt_zespolowy.ViewModels.BudgetStatusViewModel>

@{
    ViewData["Title"] = "Budżety";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>Twoje Budżety</h1>
        <a asp-action="Create" class="btn btn-primary">+ Nowy Budżet</a>
    </div>

    <div class="card shadow-sm">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Miesiąc</th>
                        <th>Kategoria</th>
                        <th style="width: 35%;">Wykorzystanie budżetu</th>
                        <th>Status</th>
                        <th>Priorytet</th>
                        <th class="text-center">Akcje</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        // Ustalanie klas CSS w zależności od przekroczenia budżetu
                        var isOver = item.IsOverBudget;
                        var progressClass = isOver ? "bg-danger" : (item.Percentage > 85 ? "bg-warning" : "bg-success");
                        // Formatowanie procentów dla CSS (max 100% szerokości paska)
                        var widthPercent = Math.Min(item.Percentage, 100).ToString("0", System.Globalization.CultureInfo.InvariantCulture) + "%";

                        <tr class="@(isOver ? "table-danger" : "")">
                            <td>
                                <strong>@item.Budget.Month.ToString("MM.yyyy")</strong>
                            </td>
                            <td class="fw-bold">
                                @Html.DisplayFor(modelItem => item.Budget.Category.Name)
                            </td>
                            <td>
                                <div class="d-flex justify-content-between small mb-1">
                                    <span>Wydano: <strong>@item.SpentAmount.ToString("C")</strong></span>
                                    <span>Limit: @item.Budget.Amount.ToString("C")</span>
                                </div>
                                <div class="progress" style="height: 12px; background-color: #e9ecef;">
                                    <div class="progress-bar @progressClass" role="progressbar"
                                         style="width: @widthPercent"
                                         aria-valuenow="@item.Percentage" aria-valuemin="0" aria-valuemax="100">
                                    </div>
                                </div>
                                <small class="text-muted">
                                    @if (isOver)
                                    {
                                        <span class="text-danger fw-bold">Przekroczono o @Math.Abs(item.RemainingAmount).ToString("C")</span>
                                    }
                                    else
                                    {
                                        <span>Pozostało: @item.RemainingAmount.ToString("C") (@(100 - (int)item.Percentage)%)</span>
                                    }
                                </small>
                            </td>
                            <td>
                                @if (isOver)
                                {
                                    <span class="badge bg-danger">Przekroczony</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">W normie</span>
                                }
                            </td>
                            <td>
                                @{
                                    var priorityBadge = item.Budget.Priority switch
                                    {
                                        projekt_zespolowy.Models.BudgetPriority.Wysoki => "bg-danger",
                                        projekt_zespolowy.Models.BudgetPriority.Sredni => "bg-warning text-dark",
                                        _ => "bg-info text-dark"
                                    };
                                }
                                <span class="badge @priorityBadge">@item.Budget.Priority</span>
                            </td>
                            <td class="text-center">
                                <div class="btn-group">
                                    <a asp-action="Edit" asp-route-id="@item.Budget.Id" class="btn btn-sm btn-outline-primary">Edytuj</a>
                                    <a asp-action="Delete" asp-route-id="@item.Budget.Id" class="btn btn-sm btn-outline-danger">Usuń</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>