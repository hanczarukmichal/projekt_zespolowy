@using Microsoft.AspNetCore.Identity
@using projekt_zespolowy.Models
@inject UserManager<ApplicationUser> UserManager

@{
    // Pobieramy aktualnego użytkownika
    var user = await UserManager.GetUserAsync(User);
    // Ustawiamy ścieżkę do awatara lub domyślny obrazek
    var userAvatar = user?.AvatarPath != null
        ? $"/uploads/avatars/{user.AvatarPath}"
        : "https://placehold.co/100x100/e9ecef/6c757d?text=User";
}

<!DOCTYPE html>
<html lang="pl" data-bs-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SmartBudget</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <script>
        const storedTheme = localStorage.getItem('theme');
        const getPreferredTheme = () => {
            if (storedTheme) {
                return storedTheme;
            }
            return window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
        };
        document.documentElement.setAttribute('data-bs-theme', getPreferredTheme());
    </script>
</head>
<body>
    <div class="d-flex" id="wrapper">

        <div class="border-end bg-body-tertiary" id="sidebar-wrapper">
            <div class="sidebar-heading border-bottom bg-body-tertiary">
                <i class="fas fa-wallet me-2 text-primary"></i>SmartBudget
            </div>
            <div class="list-group list-group-flush">
                <a asp-controller="Home" asp-action="Index" class="list-group-item list-group-item-action list-group-item-light p-3">
                    <i class="fas fa-home me-3" style="width: 20px;"></i>Pulpit
                </a>
                <a asp-controller="Transactions" asp-action="Index" class="list-group-item list-group-item-action list-group-item-light p-3">
                    <i class="fas fa-exchange-alt me-3" style="width: 20px;"></i>Transakcje
                </a>
                <a asp-controller="Budgets" asp-action="Index" class="list-group-item list-group-item-action list-group-item-light p-3">
                    <i class="fas fa-piggy-bank me-3" style="width: 20px;"></i>Budżety
                </a>
                <a asp-controller="Liabilities" asp-action="Index" class="list-group-item list-group-item-action list-group-item-light p-3">
                    <i class="fas fa-hand-holding-usd me-3" style="width: 20px;"></i>Długi
                </a>
                <a asp-controller="Categories" asp-action="Index" class="list-group-item list-group-item-action list-group-item-light p-3">
                    <i class="fas fa-tags me-3" style="width: 20px;"></i>Kategorie
                </a>
                <a asp-controller="Reports" asp-action="Index" class="list-group-item list-group-item-action list-group-item-light p-3">
                    <i class="fas fa-chart-pie me-3" style="width: 20px;"></i>Raporty
                </a>
                <a asp-controller="Edukacja" asp-action="Index" class="list-group-item list-group-item-action list-group-item-light p-3">
                    <i class="fas fa-graduation-cap me-3" style="width: 20px;"></i>Edukacja
                </a>
                <a asp-controller="Settings" asp-action="Index" class="list-group-item list-group-item-action list-group-item-light p-3">
                    <i class="fas fa-cog me-3" style="width: 20px;"></i>Ustawienia
                </a>
            </div>
        </div>

        <div id="page-content-wrapper">
            <nav class="navbar navbar-expand-lg navbar-light bg-body-tertiary border-bottom">
                <div class="container-fluid">
                    <button class="btn btn-primary" id="menu-toggle">
                        <i class="fas fa-bars"></i>
                    </button>

                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav ms-auto mt-2 mt-lg-0 align-items-center">

                            <li class="nav-item me-3">
                                <button class="btn btn-outline-secondary btn-sm" id="theme-toggle" title="Zmień motyw">
                                    <i class="fas fa-moon" id="theme-icon"></i>
                                </button>
                            </li>

                            @if (User.Identity.IsAuthenticated)
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <img src="@userAvatar" alt="Avatar" class="rounded-circle me-2 border" style="width: 35px; height: 35px; object-fit: cover;">
                                        <span class="fw-bold">@User.Identity.Name</span>
                                    </a>
                                    <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                        <a class="dropdown-item" asp-controller="Settings" asp-action="Index">Profil</a>
                                        <div class="dropdown-divider"></div>
                                        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                            <button type="submit" class="dropdown-item text-danger">Wyloguj</button>
                                        </form>
                                    </div>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">Zaloguj</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">Rejestracja</a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </nav>

            <div class="container-fluid p-4">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        // --- 1. Obsługa Paska Bocznego ---
        var el = document.getElementById("wrapper");
        var toggleButton = document.getElementById("menu-toggle");

        toggleButton.onclick = function () {
            el.classList.toggle("toggled");
        };

        // --- 2. Obsługa Motywu (Light/Dark) ---
        const themeToggleBtn = document.getElementById('theme-toggle');
        const themeIcon = document.getElementById('theme-icon');

        // Funkcja ustawiająca motyw
        function setTheme(theme) {
            // Ustawiamy atrybut w HTML (dla CSS)
            document.documentElement.setAttribute('data-bs-theme', theme);
            // Zapisujemy wybór w przeglądarce
            localStorage.setItem('theme', theme);

            // Logika zmiany ikony (Słońce vs Księżyc)
            if (theme === 'dark') {
                // Jeśli jest ciemno -> pokaż SŁOŃCE (żeby przełączyć na jasny)
                themeIcon.className = 'fas fa-sun text-warning'; // text-warning robi słońce żółtym
            } else {
                // Jeśli jest jasno -> pokaż KSIĘŻYC
                themeIcon.className = 'fas fa-moon';
            }
        }

        // Sprawdzenie zapisanego motywu przy starcie strony
        const savedTheme = localStorage.getItem('theme') || 'light';
        setTheme(savedTheme);

        // Obsługa kliknięcia przycisku
        themeToggleBtn.addEventListener('click', () => {
            const currentTheme = document.documentElement.getAttribute('data-bs-theme');
            const newTheme = currentTheme === 'light' ? 'dark' : 'light';
            setTheme(newTheme);
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>