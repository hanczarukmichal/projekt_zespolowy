@using Microsoft.AspNetCore.Identity
@using projekt_zespolowy.Models
@inject UserManager<ApplicationUser> UserManager

@{
    var user = await UserManager.GetUserAsync(User);
    var userAvatar = user?.AvatarPath != null
        ? $"/uploads/avatars/{user.AvatarPath}"
        : "https://placehold.co/100x100/e9ecef/6c757d?text=User";
}

<!DOCTYPE html>
<html lang="pl" data-bs-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SmartBudget</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <script>
        const storedTheme = localStorage.getItem('theme');
        const getPreferredTheme = () => {
            if (storedTheme) return storedTheme;
            return window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
        };
        document.documentElement.setAttribute('data-bs-theme', getPreferredTheme());
    </script>
</head>
<body>
    <div class="d-flex" id="wrapper">

        <!-- SIDEBAR -->
        <div class="border-end bg-body-tertiary" id="sidebar-wrapper">
            <div class="sidebar-heading border-bottom bg-body-tertiary text-center fw-bold">
                <i class="fas fa-wallet me-2 text-primary"></i>SmartBudget
            </div>

            <div class="list-group list-group-flush">
                <a asp-controller="Home" asp-action="Index" class="list-group-item list-group-item-action p-3">
                    <i class="fas fa-home me-3"></i>Pulpit
                </a>
                <a asp-controller="Transactions" asp-action="Index" class="list-group-item list-group-item-action p-3">
                    <i class="fas fa-exchange-alt me-3"></i>Transakcje
                </a>
                <a asp-controller="Budgets" asp-action="Index" class="list-group-item list-group-item-action p-3">
                    <i class="fas fa-piggy-bank me-3"></i>Budżety
                </a>
                <a asp-controller="Liabilities" asp-action="Index" class="list-group-item list-group-item-action p-3">
                    <i class="fas fa-hand-holding-usd me-3"></i>Długi
                </a>
                <a asp-controller="SavingsGoals" asp-action="Index" class="list-group-item list-group-item-action p-3">
                    <i class="fas fa-bullseye me-3"></i>Cele oszczędnościowe
                </a>
                <a asp-controller="Categories" asp-action="Index" class="list-group-item list-group-item-action p-3">
                    <i class="fas fa-tags me-3"></i>Kategorie
                </a>
                <a asp-controller="Reports" asp-action="Index" class="list-group-item list-group-item-action p-3">
                    <i class="fas fa-chart-pie me-3"></i>Raporty
                </a>
                <a asp-controller="Market" asp-action="Index" class="list-group-item list-group-item-action p-3">
                    <i class="fas fa-chart-line me-3"></i>Rynek i waluty
                </a>
                <a asp-controller="Edukacja" asp-action="Index" class="list-group-item list-group-item-action p-3">
                    <i class="fas fa-graduation-cap me-3"></i>Edukacja
                </a>
                <a asp-controller="Settings" asp-action="Index" class="list-group-item list-group-item-action p-3">
                    <i class="fas fa-cog me-3"></i>Ustawienia
                </a>
            </div>
        </div>

        <!-- PAGE CONTENT -->
        <div id="page-content-wrapper">

            <!-- TOP NAVBAR -->
            <nav class="navbar navbar-expand-lg bg-body-tertiary border-bottom px-3">
                <button class="btn btn-primary me-3" id="menu-toggle">
                    <i class="fas fa-bars"></i>
                </button>

                <div class="ms-auto d-flex align-items-center gap-2">

                    <button class="btn btn-outline-secondary btn-sm" id="theme-toggle">
                        <i class="fas fa-moon" id="theme-icon"></i>
                    </button>

                    @if (User.Identity.IsAuthenticated)
                    {
                        <div class="dropdown">
                            <a class="btn btn-light dropdown-toggle d-flex align-items-center"
                               data-bs-toggle="dropdown">
                                <img src="@userAvatar"
                                     class="rounded-circle me-2"
                                     style="width:32px;height:32px;object-fit:cover;">
                                <strong>@User.Identity.Name</strong>
                            </a>

                            <ul class="dropdown-menu dropdown-menu-end">
                                <li>
                                    <a class="dropdown-item" asp-controller="Settings" asp-action="Index">
                                        Profil
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider" /></li>
                                <li>
                                    <form asp-area="Identity"
                                          asp-page="/Account/Logout"
                                          asp-route-returnUrl="@Url.Action("Index", "Home")">
                                        <button type="submit"
                                                class="dropdown-item text-danger">
                                            Wyloguj
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    }
                    else
                    {
                        <a class="btn btn-outline-primary btn-sm auth-nav-btn"
                           asp-area="Identity"
                           asp-page="/Account/Login">
                            Zaloguj
                        </a>

                        <a class="btn btn-primary btn-sm auth-nav-btn"
                           asp-area="Identity"
                           asp-page="/Account/Register">
                            Rejestracja
                        </a>
                    }
                </div>
            </nav>

            <main class="container-fluid p-4">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
