<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SmartBudget</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- FontAwesome (ikony) -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>
<body>
    <div class="d-flex" id="wrapper">

        <!-- ========================================= -->
        <!-- POCZĄTEK PASKA BOCZNEGO (SIDEBAR)         -->
        <!-- ========================================= -->
        <div id="sidebar-wrapper">
            <div class="sidebar-heading">
                <i class="fas fa-wallet me-2"></i>SmartBudget
            </div>
            <div class="list-group list-group-flush my-3">
                <a asp-controller="Home" asp-action="Index" class="list-group-item list-group-item-action bg-transparent">
                    <i class="fas fa-home me-3" style="width: 20px;"></i>Pulpit
                </a>
                <a asp-controller="Transactions" asp-action="Index" class="list-group-item list-group-item-action bg-transparent">
                    <i class="fas fa-exchange-alt me-3" style="width: 20px;"></i>Transakcje
                </a>
                <a asp-controller="Budgets" asp-action="Index" class="list-group-item list-group-item-action bg-transparent">
                    <i class="fas fa-piggy-bank me-3" style="width: 20px;"></i>Budżety
                </a>

                <!-- TUTAJ JEST NOWY LINK DO DŁUGÓW -->
                <a asp-controller="Liabilities" asp-action="Index" class="list-group-item list-group-item-action bg-transparent">
                    <i class="fas fa-hand-holding-usd me-3" style="width: 20px;"></i>Długi i Pożyczki
                </a>

                <a asp-controller="Categories" asp-action="Index" class="list-group-item list-group-item-action bg-transparent">
                    <i class="fas fa-tags me-3" style="width: 20px;"></i>Kategorie
                </a>
                <a asp-controller="Reports" asp-action="Index" class="list-group-item list-group-item-action bg-transparent">
                    <i class="fas fa-chart-pie me-3" style="width: 20px;"></i>Raporty
                </a>

                <!-- TUTAJ JEST LINK DO EDUKACJI -->
                <a asp-controller="Edukacja" asp-action="Index" class="list-group-item list-group-item-action bg-transparent">
                    <i class="fas fa-graduation-cap me-3" style="width: 20px;"></i>Edukacja
                </a>
            </div>
        </div>
        <!-- KONIEC PASKA BOCZNEGO -->
        <!-- Page Content Wrapper -->
        <div id="page-content-wrapper">

            <!-- Górny pasek nawigacji (Navbar) -->
            <nav class="navbar navbar-expand-lg navbar-light top-navbar">
                <div class="container-fluid">
                    <button class="btn btn-outline-secondary" id="menu-toggle">
                        <i class="fas fa-bars"></i>
                    </button>

                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav ms-auto mt-2 mt-lg-0">
                            <partial name="_LoginPartial" />
                        </ul>
                    </div>
                </div>
            </nav>

            <!-- Główna zawartość strony -->
            <div class="container-fluid p-4">
                <main role="main">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Skrypt do wysuwania/chowania menu -->
    <script>
        var el = document.getElementById("wrapper");
        var toggleButton = document.getElementById("menu-toggle");

        toggleButton.onclick = function () {
            el.classList.toggle("toggled");
        };
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>