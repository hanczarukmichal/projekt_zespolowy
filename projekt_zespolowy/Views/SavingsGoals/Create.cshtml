@model projekt_zespolowy.Models.SavingsGoal

@{
    ViewData["Title"] = "Nowy Cel";
}

<h2>Utwórz nowy cel oszczędnościowy</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="card p-3 mb-3 bg-light">
                <h5 class="card-title">Podstawowe informacje</h5>
                <div class="form-group mb-3">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="TargetAmount" class="control-label"></label>
                    <input asp-for="TargetAmount" class="form-control" type="number" step="0.01" />
                    <span asp-validation-for="TargetAmount" class="text-danger"></span>
                </div>
            </div>

            <div class="card p-3 mb-3 border-primary">
                <h5 class="card-title text-primary"><i class="fas fa-robot me-2"></i>Automat Oszczędzania</h5>

                <div class="form-check form-switch mb-3">
                    <input class="form-check-input" type="checkbox" asp-for="IsAutoSaveEnabled" id="autoSaveToggle">
                    <label class="form-check-label fw-bold" for="autoSaveToggle">Włącz automatyczne odkładanie</label>
                </div>

                <div id="autoSaveFields" style="display:none;">
                    <div class="form-group mb-3">
                        <label asp-for="AutoSaveAmount" class="control-label">Ile odkładać co miesiąc?</label>
                        <input asp-for="AutoSaveAmount" class="form-control" type="number" step="0.01" />
                        <span asp-validation-for="AutoSaveAmount" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="AutoSaveDay" class="control-label">Dzień miesiąca (np. 10 to dziesiąty dzień każdego miesiąca)</label>
                        <input asp-for="AutoSaveDay" class="form-control" type="number" min="1" max="28" />
                        <small class="text-muted">Dla bezpieczeństwa wybierz dzień od 1 do 28.</small>
                        <span asp-validation-for="AutoSaveDay" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Utwórz Cel" class="btn btn-success btn-lg" />
                <a asp-action="Index" class="btn btn-secondary btn-lg">Powrót</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Prosty skrypt do pokazywania/ukrywania pól
        var toggle = document.getElementById('autoSaveToggle');
        var fields = document.getElementById('autoSaveFields');

        function updateVisibility() {
            if (toggle.checked) {
                fields.style.display = 'block';
            } else {
                fields.style.display = 'none';
            }
        }

        toggle.addEventListener('change', updateVisibility);
        // Uruchom przy starcie (na wypadek błędów walidacji i przeładowania strony)
        updateVisibility();
    </script>
}