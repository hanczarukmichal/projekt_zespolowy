@model IEnumerable<projekt_zespolowy.Models.SavingsGoal>

@{
    ViewData["Title"] = "Cele Oszczędnościowe";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Cele Oszczędnościowe</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Dodaj nowy cel
        </a>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
        </div>
    }

    <div class="row">
        @if (!Model.Any())
        {
            <div class="col-12 text-center mt-5">
                <h4 class="text-muted">Nie masz jeszcze żadnych celów oszczędnościowych.</h4>
                <p class="text-muted">Kliknij przycisk powyżej, aby dodać pierwszy cel!</p>
            </div>
        }
        else
        {
            @foreach (var item in Model)
            {
                // Oblicz procent postępu
                var progress = item.TargetAmount > 0 ? (item.CurrentAmount / item.TargetAmount) * 100 : 0;
                if (progress > 100) progress = 100;

                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card shadow-sm h-100">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <div>
                                    <h4 class="card-title mb-0 fw-bold">@item.Name</h4>
                                    <small class="text-muted">Cel: @item.TargetAmount.ToString("C")</small>
                                </div>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm" title="Usuń cel">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </div>

                            <div class="mb-3">
                                <div class="d-flex justify-content-between mb-1">
                                    <span class="text-success fw-bold">@item.CurrentAmount.ToString("C")</span>
                                    <span class="text-muted small">@((int)progress)%</span>
                                </div>
                                <div class="progress" style="height: 15px;">
                                    <div class="progress-bar bg-success" role="progressbar"
                                         style="width: @((int)progress)%;"
                                         aria-valuenow="@progress" aria-valuemin="0" aria-valuemax="100">
                                    </div>
                                </div>
                            </div>

                            @if (item.IsAutoSaveEnabled)
                            {
                                <div class="alert alert-light border py-2 px-3 mb-3 d-flex align-items-center" style="font-size: 0.85rem;">
                                    <i class="fas fa-robot text-primary me-2"></i>
                                    <div>
                                        <strong>Automat włączony</strong><br />
                                        @item.AutoSaveAmount.ToString("C") / mies. (dzień: @item.AutoSaveDay)
                                    </div>
                                </div>
                            }

                            <hr />

                            <form asp-action="Deposit" method="post" class="d-flex align-items-center mb-2">
                                <input type="hidden" name="id" value="@item.Id" />
                                <input type="number" step="0.01" name="amount" class="form-control me-2 form-control-sm" placeholder="Kwota wpłaty" required min="0.01" />
                                <button type="submit" class="btn btn-success btn-sm">
                                    <i class="fas fa-plus"></i> Wpłać
                                </button>
                            </form>

                            <form asp-action="Withdraw" method="post" class="d-flex align-items-center">
                                <input type="hidden" name="id" value="@item.Id" />
                                <input type="number" step="0.01" name="amount" class="form-control me-2 form-control-sm" placeholder="Kwota wypłaty" required min="0.01" />
                                <button type="submit" class="btn btn-outline-warning btn-sm text-dark">
                                    <i class="fas fa-minus"></i> Wypłać
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>