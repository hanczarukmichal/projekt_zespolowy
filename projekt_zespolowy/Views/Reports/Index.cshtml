@model projekt_zespolowy.ViewModels.ReportViewModel

@{
    ViewData["Title"] = "Raport Finansowy";
    string GetTrendClass(double percent, bool isExpense)
    {
        if (percent == 0) return "text-muted";
        if (isExpense) return percent > 0 ? "text-danger" : "text-success";
        return percent > 0 ? "text-success" : "text-danger";
    }
    string GetArrow(double percent) => percent > 0 ? "fa-arrow-up" : (percent < 0 ? "fa-arrow-down" : "fa-minus");
}

<div class="container-fluid py-4">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mb-4">
        <div class="mb-3 mb-md-0">
            <h2 class="fw-bold mb-0">Raport Miesięczny</h2>
            <p class="text-muted">@Model.CurrentMonth.ToString("MMMM yyyy")</p>
        </div>

        <div class="d-flex gap-2">
            <a asp-action="CustomReport" class="btn btn-outline-secondary">
                <i class="fas fa-calendar-alt me-2"></i>Wybierz Okres
            </a>

            <form method="get" class="d-flex gap-2">
                <select name="month" class="form-select w-auto" onchange="this.form.submit()">
                    @for (int i = 1; i <= 12; i++)
                    {
                        <option value="@i" selected="@(i == Model.CurrentMonth.Month)">@System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(i)</option>
                    }
                </select>
                <select name="year" class="form-select w-auto" onchange="this.form.submit()">
                    @for (int i = DateTime.Now.Year; i >= DateTime.Now.Year - 2; i--)
                    {
                        <option value="@i" selected="@(i == Model.CurrentMonth.Year)">@i</option>
                    }
                </select>
            </form>
        </div>
    </div>

    <div class="row g-4 mb-4">
        <div class="col-md-4">
            <div class="card shadow-sm h-100 border-start border-4 border-success">
                <div class="card-body">
                    <h6 class="text-muted text-uppercase mb-2">Przychody</h6>
                    <h3 class="fw-bold text-success mb-3">@Model.TotalIncome.ToString("C")</h3>
                    <div class="d-flex align-items-center justify-content-between">
                        <span class="@GetTrendClass(Model.IncomeChangePercent, false) fw-bold small">
                            <i class="fas @GetArrow(Model.IncomeChangePercent) me-1"></i>
                            @Math.Abs(Model.IncomeChangePercent).ToString("0.0")%
                        </span>
                        <span class="text-muted small">vs poprz. mies. (@Model.PrevTotalIncome.ToString("N0"))</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm h-100 border-start border-4 border-danger">
                <div class="card-body">
                    <h6 class="text-muted text-uppercase mb-2">Wydatki</h6>
                    <h3 class="fw-bold text-danger mb-3">@Model.TotalExpense.ToString("C")</h3>
                    <div class="d-flex align-items-center justify-content-between">
                        <span class="@GetTrendClass(Model.ExpenseChangePercent, true) fw-bold small">
                            <i class="fas @GetArrow(Model.ExpenseChangePercent) me-1"></i>
                            @Math.Abs(Model.ExpenseChangePercent).ToString("0.0")%
                        </span>
                        <span class="text-muted small">vs poprz. mies. (@Model.PrevTotalExpense.ToString("N0"))</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm h-100 border-start border-4 border-primary">
                <div class="card-body">
                    <h6 class="text-muted text-uppercase mb-2">Bilans Netto</h6>
                    <h3 class="fw-bold @(Model.Balance >= 0 ? "text-primary" : "text-danger") mb-3">
                        @Model.Balance.ToString("C")
                    </h3>
                    <div class="text-muted small">Pozostało w kieszeni</div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-lg-8">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-white p-0">
                    <ul class="nav nav-tabs card-header-tabs m-0" id="trendTabs" role="tablist">
                        <li class="nav-item">
                            <button class="nav-link active fw-bold py-3 px-4 border-top-0 border-start-0" id="expense-tab" data-bs-toggle="tab" data-bs-target="#expenseTrend" type="button">
                                <i class="fas fa-chart-line text-danger me-2"></i>Trend Wydatków
                            </button>
                        </li>
                        <li class="nav-item">
                            <button class="nav-link fw-bold py-3 px-4 border-top-0" id="income-tab" data-bs-toggle="tab" data-bs-target="#incomeTrend" type="button">
                                <i class="fas fa-chart-line text-success me-2"></i>Trend Przychodów
                            </button>
                        </li>
                    </ul>
                </div>
                <div class="card-body tab-content">
                    <div class="tab-pane fade show active" id="expenseTrend" style="height: 400px; width: 100%;">
                        <canvas id="expenseTrendChart"></canvas>
                    </div>
                    <div class="tab-pane fade" id="incomeTrend" style="height: 400px; width: 100%;">
                        <canvas id="incomeTrendChart"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-white p-0">
                    <ul class="nav nav-tabs card-header-tabs m-0" id="pieTabs" role="tablist">
                        <li class="nav-item">
                            <button class="nav-link active fw-bold py-3 px-3 border-top-0 border-start-0" id="exp-pie-tab" data-bs-toggle="tab" data-bs-target="#expPie" type="button">
                                Wydatki
                            </button>
                        </li>
                        <li class="nav-item">
                            <button class="nav-link fw-bold py-3 px-3 border-top-0" id="inc-pie-tab" data-bs-toggle="tab" data-bs-target="#incPie" type="button">
                                Przychody
                            </button>
                        </li>
                    </ul>
                </div>
                <div class="card-body tab-content d-flex justify-content-center align-items-center">
                    <div class="tab-pane fade show active w-100 position-relative" id="expPie" style="height: 300px;">
                        @if (Model.ExpenseCategoryValues.Sum() > 0)
                        {
                            <canvas id="expensePieChart"></canvas>
                        }
                        else
                        {
                            <div class="text-center text-muted py-5">Brak danych</div>
                        }
                    </div>
                    <div class="tab-pane fade w-100 position-relative" id="incPie" style="height: 300px;">
                        @if (Model.IncomeCategoryValues.Sum() > 0)
                        {
                            <canvas id="incomePieChart"></canvas>
                        }
                        else
                        {
                            <div class="text-center text-muted py-5">Brak danych</div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const isDark = document.documentElement.getAttribute('data-bs-theme') === 'dark';
            const textColor = isDark ? '#e0e0e0' : '#666';
            const gridColor = isDark ? '#444' : '#eee';

            function createLineChart(ctxId, labelCurrent, dataCurrent, labelPrev, dataPrev, color) {
                const ctx = document.getElementById(ctxId).getContext('2d');
                new Chart(ctx, {
                    type: 'line',
                    data: {
                        labels: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.DaysLabels)),
                        datasets: [
                            {
                                label: labelCurrent,
                                data: dataCurrent,
                                borderColor: color,
                                backgroundColor: color + '10',
                                borderWidth: 3,
                                pointRadius: 2,
                                tension: 0.3,
                                fill: true
                            },
                            {
                                label: labelPrev,
                                data: dataPrev,
                                borderColor: '#858796',
                                borderDash: [5, 5],
                                borderWidth: 2,
                                pointRadius: 0,
                                tension: 0.3,
                                fill: false
                            }
                        ]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        interaction: { mode: 'index', intersect: false },
                        plugins: { legend: { labels: { color: textColor } } },
                        scales: {
                            x: { grid: { color: gridColor }, ticks: { color: textColor } },
                            y: { grid: { color: gridColor }, ticks: { color: textColor } }
                        }
                    }
                });
            }

            function createPieChart(ctxId, labels, data) {
                const ctx = document.getElementById(ctxId);
                if (!ctx) return;

                new Chart(ctx, {
                    type: 'doughnut',
                    data: {
                        labels: labels,
                        datasets: [{
                            data: data,
                            backgroundColor: [
                                '#4e73df', '#1cc88a', '#36b9cc', '#f6c23e', '#e74a3b',
                                '#858796', '#5a5c69', '#fd7e14', '#20c9a6', '#6610f2'
                            ],
                            borderWidth: isDark ? 0 : 2
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            legend: { position: 'right', labels: { color: textColor, usePointStyle: true } }
                        }
                    }
                });
            }

            createLineChart('expenseTrendChart', 'Ten miesiąc (Wydatki)',
        @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.CumulativeExpenseCurrent)),
                'Poprzedni miesiąc',
        @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.CumulativeExpensePrev)),
                '#e74a3b'
            );

            createLineChart('incomeTrendChart', 'Ten miesiąc (Przychody)',
        @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.CumulativeIncomeCurrent)),
                'Poprzedni miesiąc',
        @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.CumulativeIncomePrev)),
                '#1cc88a'
            );

            createPieChart('expensePieChart',
        @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.ExpenseCategoryLabels)),
        @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.ExpenseCategoryValues))
                    );

            createPieChart('incomePieChart',
        @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.IncomeCategoryLabels)),
        @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.IncomeCategoryValues))
                    );
        });
    </script>
}